= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    - cat_array = []
    - Category.each_with_level(Category.root.self_and_descendants) do |cat, level|
      - cat_array << ["#{'-' * cat.level} #{cat.name}", cat.id, cat.leaf? ? {} : {disabled: true}]

    = f.label :category_id
    = f.select :category_id, options_for_select(cat_array, @article.category_id), {include_blank: true}
  .actions
    = f.submit 'Save'
